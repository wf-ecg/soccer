              th
                img.flag.small(src='./images/flags/croatia.png', alt='#')
              th
              td
              td
              td
              td
              td
              td
      .possession
        h4 Ball Possession
        input.donut(
          type='range'
          min='0', max='100', step='5'
          data-width='150', data-height='150'
          data-angleoffset='30', data-anglerange='359.9')
        .major
          h3 %
      .shotsfaced
        h4
          span.team_left #
          |  Shots
        .wrap.bottom
          .net
            img(src='./images/icons/net-fpo.png', alt='net-fpo')
          h4.nums
            | Shots
            span.a #
            |             On Goal
            span.b #
            |             Goals
            span.c #
      .theplayer
        h4 Player of the Match
        img(src='#', alt='#')
        h3.bottom #GettingItDone
      .theshot
        img.fill(src='#', alt='#')
        h3.bottom
          | Photo
          br
          | of the
          br
          | Day
          br
          img(src='./images/icons/camera.png')
      .accuracy
        h4 Pass Accuracy
        .limit
          .minor
            h3 %
          .major
            h3 %
      .thetweet
        h4 Tweet of the Match
        p #
        h5.author.bottom #
      .timeline
        h4 Match Timeline
        .linewrap
          .events
            table
              tr
                td 0
                td 15
                td 30
                td 45
                td 60
                td 75
                td.gap
                td 90
      .thefact
        h4 Did you know?
        p #
