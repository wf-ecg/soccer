      content='website')
    // css
    link(href='./fonts/archer.ssm.css' rel='stylesheet' media='all')
    link(href='./styles/main.css' rel='stylesheet' media='all')
    //
    script(src='./vendors/require.js/require.js' data-main='./config')

  body.loading
    div(data-role='page' tabindex='0')

    form
      | Select match:
      select#GameNum(size='1')
    section.cells
      .top
        img.logos(
          src='./images/icons/logos.png'
          alt='logos...Wells Fargo and Orgulloso Patrocinador'
          width='161', height='106')
        h1 Match Recap
        .bottom
          .score
            span.left
              img.flag.mid(src='#', alt='#')
            span.center #-#
            span.right
              img.flag.mid(src='#', alt='#')
          h2.teams
            span.team_left #
            span vs
            span.team_right #
          h3.ticket
            span.date #
            span
            span.stadium #
            span
            span.city #
      .rankings
        div
          table
            tr
              th(title='Flag')
              th Group-A
              th(title='Matches played') P
              th(title='Wins') W
              th(title='Draws') D
              th(title='Losses') L
              th(title='Goals difference') gD
              th(title='Team points') Pts
              //
                <th title="Rank"></th>
                <th class="grouping">Group-A</th>
                <th title="Goals for">gF</th>
                <th title="Goals against">gA</th>
            tr
              th
                img.flag.small(src='./images/flags/brazil.png', alt='#')
              th
              td
