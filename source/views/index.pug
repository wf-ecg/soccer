doctype html
html(lang='en')
  head
    title World Cup
    //
    meta(charset='utf-8')
    meta(http-equiv='x-ua-compatible' content='ie=edge')
    meta(name='viewport' content='width=device-width')
    meta(name = 'author' content = 'WF-ECG INTERACTIVE')
    // static
    link(rel='canonical'
      href='http://ecg.hosting.wellsfargo.com/x/index.html')
    meta(property='og:title'
      content='Wells Fargo / Soccer')
    meta(property='og:description'
      content='x.')
    meta(property='og:url'
      content='http://ecg.hosting.wellsfargo.com/x/index.html')
